{
  "extends": "@vue/tsconfig/tsconfig.dom.json", // or similar base config
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"] // Ensures `@/` alias works
    },
    "types": ["vite/client", "vue-router"] // Add 'vue-router' here
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
